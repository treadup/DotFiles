
# Topmost EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.go]
indent_style = tab
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 4

[*.c]
indent_style = space
indent_size = 4

[*.{clj,cljs,cljc}]
indent_style = space
indent_size = 2

[*.el]
indent_style = space
indent_size = 2

[*.scm]
indent_style = space
indent_size = 2

[*.{lisp,lsp,cl}]
indent_style = space
indent_size = 2

[*.{md,txt}]
indent_style = space
indent_size = 4

[*.{html,xhtml}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 4

[*.xml]
indent_style = space
indent_size = 2

[*.sql]
indent_style = space
indent_size = 4
